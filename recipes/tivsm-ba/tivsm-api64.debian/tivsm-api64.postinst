#!/bin/sh

set -e

ldconfig

GROUP=tsm
DSMTCA=/usr/lib/tsm/client/api/bin64/dsmtca
LOGDIR=/var/log/tsm

if [ "$1" = configure ]; then
    if [ -z `getent group $GROUP` ]; then
        addgroup --system --quiet $GROUP
    fi

    chgrp $GROUP $DSMTCA
    chmod 4754   $DSMTCA

    chgrp $GROUP $LOGDIR
    chmod g+w    $LOGDIR
fi

#DEBHELPER#
