
prepare

# use a local file if given
ARCHIVE=$1

# we start with the RPM instead of the deb and process it with alien
[ "$ARCHIVE" ] || ARCHIVE=`fetch http://ardownload.adobe.com/pub/adobe/reader/unix/9.x/9.5.5/enu/AdbeRdr9.5.5-1_i486linux_enu.rpm`

extract $ARCHIVE

cd $BUILD_DIR/AdobeReader*

debian_rules

cat <<EOF > debian/install
opt usr/lib
EOF

debuild -b -uc -ai386

# clean
